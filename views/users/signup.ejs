<% layout("layouts/boilerplate")%>
<div class="row">
    <div class=" col-6 offset-3">
        <h2>Sign up to Wanderlust</h2>
        <form method="POST" action="/signup" class="needs-validation" novalidate>
            <div class="mb-3">
                <label for="username" class="form-label">Username</label>
                <input name="username" id="username" type="text" class="form-control" required>
                <div class="valid-feedback">look's good</div>
                <div class="invalid-feedback">username should be valid</div>
            </div>
            <div class="mb-3">
                <label for="email" class="form-label">Email</label>
                <input name="email" id="email" type="text" class="form-control" required>
                <div class="invalid-feedback">email should be valid</div>
            </div>
            <div class="mb-3">
                <label for="password" class="form-label">Password</label>
                <input name="password" id="password" type="password" class="form-control" required>
                <div class="invalid-feedback">password should be valid</div>
            </div>
            <button class="btn btn-success">Sign up</button>
        </form>
    </div>
 </div>